<% if @car_model.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@car_model.errors.count, "error") %>
      prohibited this car model from being created:
    </h2>

    <ul>
    <% @car_model.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @car_model do |f| %>
  <%= f.label :brand%>
  <%= f.text_field :brand%><br>

  <%= f.label :model%>
  <%= f.text_field :model%><br>

  <%= f.label :description%>
  <%= f.text_area :description%><br>

  <%= f.label :image_url%>
  <%= f.text_field :image_url%><br>

  <%= f.label :category%>
  <%= f.text_field :category%><br>

  <%= f.submit %>
<% end %>
