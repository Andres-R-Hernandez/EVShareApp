<h1 align="center"><%= @user.name %> Home Page</h1>

<b>Age: </b><%= @user.age %><br>
<br>
<b>Driver ID: </b><%= @user.driver_id %><br>
<br>
<b>Address: </b><%= @user.address %><br>
<br>
<b>Email: </b><%= @user.email %><br>
<br>
<%= button_to "Edit", edit_user_path(@user), method: :get %>
<%= button_to "Delete User", @user, method: :delete %>
<br>
<b>Owned Cars: </b>
<ul>
<% @user.owned_cars.each do |car| %>
  <li><%= link_to car.car_full_name, car %>
<% end %>
</ul>

